@page
@model MyCourse.Pages.ContactModel
<h1>Fai una domanda a @Model.Course.Author, docente di "@Model.Course.Title"</h1>
<div class="row">
    <div class="col-12">
        <form method="POST">
            <div asp-validation-summary="All"></div>
            <label asp-for="Question"></label>
            <textarea asp-for="Question" class="form-control mb-3" rows="10"></textarea>
            <recaptcha />
            <button type="submit" class="btn btn-primary mt-3"><i class="far fa-paper-plane"></i> Invia domanda</button>
        </form>
    </div>
</div>
@section Scripts
{
<partial name="_Validation"></partial>
}